<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1" >

      

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#eeffee"
                android:orientation="vertical"
                android:padding="0dp" >

                <GridLayout
                    android:id="@+id/gridLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffeeee"
                    android:columnCount="2"
                    android:padding="20dp"
                    android:rowCount="3" >

                    <TextView
                        android:id="@+id/lblPeakCurrent"
                        android:layout_column="0"
                        android:layout_gravity="right|top"
                        android:layout_row="0"
                        android:text="Peak Current"
                        android:textSize="@dimen/smallText" />

                    <TextView
                        android:id="@+id/lblTransientRMS"
                        android:layout_column="0"
                        android:layout_gravity="right|top"
                        android:layout_row="1"
                        android:text="Transient RMS"
                        android:textSize="@dimen/smallText" />

                    <TextView
                        android:id="@+id/lblTransientPeak"
                        android:layout_column="0"
                        android:layout_gravity="right|top"
                        android:layout_row="2"
                        android:text="Transient Peak"
                        android:textSize="@dimen/smallText" />

                    <TextView
                        android:id="@+id/lblPeakCurrentValue"
                        android:layout_column="1"
                        android:layout_gravity="center|top"
                        android:layout_row="0"
                        android:textSize="@dimen/smallText" />

                    <TextView
                        android:id="@+id/lblTransientRMSValue"
                        android:layout_column="1"
                        android:layout_gravity="center|top"
                        android:layout_row="1"
                        android:textSize="@dimen/smallText" />

                    <TextView
                        android:id="@+id/lblTransientPeakValue"
                        android:layout_column="1"
                        android:layout_gravity="center|top"
                        android:layout_row="2"
                        android:textSize="@dimen/smallText" />
                </GridLayout>

                <ImageView
                    android:id="@+id/imageHealth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/health" />
            </LinearLayout>

    </ScrollView>

</RelativeLayout>